<!DOCTYPE html>
<html lang="en">
<head>
  {{>headerlinks}}
</head>
<body>
  {{>navbar}}
  <figure>
  <img src="images/transparent_pointing.webp" class="img-fluid weather-img">
  </figure>
  <div class="container_fluid main_header">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="main-content">
          <form class="temp_form">
              <input type="text" id="cityName" placeholder="City name" autocomplete="off">
              <input type="submit" value="search" id="submitBtn">
              
            
          </form>
        </div>

        <div class="tempInformation">
          <div class="top_layer">
            <p id="day">Tuesday</p>
            <p id="today-date">13 OCT</p>
          </div>
        </div>
        <div class="main_layer">
          <p id="city_name">Get output here</p>

          <div class="middle_layer data_hide">
            <p id="temp"><span>0</span> <sup>o</sup>C</p>
            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
          </div>
        </div>

      </div>
    </div>
  </div>

  {{>footer}}



  <script src="js/main.js">

  </script>
</body>
</html>